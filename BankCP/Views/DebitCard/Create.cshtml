@model BankCP.Models.Cards.DebitCard

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Создать", "Create", "DebitCard")
</p>
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        @using (Html.BeginForm("Add", "DebitCard", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="DebitCardId" class="control-label"></label>
                <input name="DebitCardId" class="form-control" />
                <span asp-validation-for="DebitCardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DebitAccountId" class="control-label"></label>
                <select name="DebitAccountId" class ="form-control" asp-items="ViewBag.DebitAccountId"></select>
            </div>
            <div class="form-group">
                <label for="ClientId" class="control-label"></label>
                <select name="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label for="CardNumber" class="control-label"></label>
                <input name="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CardVerification" class="control-label"></label>
                <input name="CardVerification" class="form-control" />
                <span asp-validation-for="CardVerification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ExpirationDate" class="control-label"></label>
                <input name="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CreationDate" class="control-label"></label>
                <input name="CreationDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ClosingDate" class="control-label"></label>
                <input name="ClosingDate" class="form-control" />
                <span asp-validation-for="ClosingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

