@model BankCP.Models.Accounts.FixedDeposit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Создать", "Create", "FixedDeposit")
</p>
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        @using (Html.BeginForm("Create", "FixedDeposit", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="TermDepositId" class="control-label">ID срочного вклада</label>
                <input name="TermDepositId" class="form-control" />
                <span asp-validation-for="TermDepositId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ClientId" class="control-label"></label>
                <select name="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label for="AccountNumber" class="control-label"></label>
                <input name="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Balance" class="control-label"></label>
                <input name="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="InterestRate" class="control-label"></label>
                <input name="InterestRate" class="form-control" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CurrencyCode" class="control-label"></label>
                <input name="CurrencyCode" class="form-control" />
                <span asp-validation-for="CurrencyCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CreationDate" class="control-label"></label>
                <input name="CreationDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ClosingDate" class="control-label"></label>
                <input name="ClosingDate" class="form-control" />
                <span asp-validation-for="ClosingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }        
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "List", "FixedDeposit")
</div>

