@model BankCP.Models.Users.Client

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Client</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        @using (Html.BeginForm("Edit", "Client", FormMethod.Post))
        {

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="ClientId" value="@Model.ClientId" />
            <div class="form-group">
                <label for="Name" class="control-label"></label>
                <input name="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Surname" class="control-label"></label>
                <input name="Surname" class="form-control" value="@Model.Surname" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Patronymic" class="control-label"></label>
                <input name="Patronymic" class="form-control" value="@Model.Patronymic"/>
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PassportNumber" class="control-label"></label>
                <input name="PassportNumber" class="form-control" value="@Model.PassportNumber"/>
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Birthday" class="control-label"></label>
                <input name="Birthday" class="form-control" value="@Model.Birthday"/>
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Address" class="control-label"></label>
                <input name="Address" class="form-control" value="@Model.Address"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>        
        }
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Edit", "Client")
</div>

