@model BankCP.Models.Accounts.DebitAccount

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Создать", "Create", "DebitAccount")
</p>
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        @using (Html.BeginForm("Create", "DebitAccount", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="DebitAccountId" class="control-label">ID дебетового счета</label>
                <input name="DebitAccountId" class="form-control" >
                <span asp-validation-for="DebitAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ClientId" class="control-label">ID клиента</label>
                <select name="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label for="AccountNumber" class="control-label">Номер счета</label>
                <input name="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Balance" class="control-label">Баланс</label>
                <input name="Balance" class="form-control" value="0"/>
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="СurrencyСode" class="control-label"></label>
                <input name="СurrencyСode" class="form-control" />
                <span asp-validation-for="СurrencyСode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CreationDate" class="control-label"></label>
                <input name="CreationDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ClosingDate" class="control-label"></label>
                <input name="ClosingDate" class="form-control" />
                <span asp-validation-for="ClosingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }        
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "List", "DebitAccount")
</div>

