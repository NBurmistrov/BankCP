@model BankCP.Models.Accounts.CreditAccount

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CreditAccount</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        @using (Html.BeginForm("Add", "CreditAccount", FormMethod.Post))
        { 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="CreditAccountId" class="control-label"></label>
                <input name="CreditAccountId" class="form-control" />
                <span asp-validation-for="CreditAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ClientId" class="control-label"></label>
                <input name="ClientId" class ="form-control">
                <span asp-validation-for="CreditAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="AccountNumber" class="control-label"></label>
                <input name="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Debt" class="control-label"></label>
                <input name="Debt" class="form-control" />
                <span asp-validation-for="Debt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MeansAvailable" class="control-label"></label>
                <input name="MeansAvailable" class="form-control" />
                <span asp-validation-for="MeansAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PaymentDate" class="control-label"></label>
                <input name="PaymentDate" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CurrencyCode" class="control-label"></label>
                <input name="CurrencyCode" class="form-control" />
                <span asp-validation-for="CurrencyCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CreationDate" class="control-label"></label>
                <input name="CreationDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ClosingDate" class="control-label"></label>
                <input name="ClosingDate" class="form-control" />
                <span asp-validation-for="ClosingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "List", "CreditAccount")
</div>

