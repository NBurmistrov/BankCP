@model BankCP.Models.Accounts.CreditAccount

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>CreditAccount</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        @using (Html.BeginForm("Edit", "CreditAccount", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="CreditAccountId" value="@Model.CreditAccountId" />
            <input type="hidden" name="ClientId" value="@Model.ClientId" />
            <div class="form-group">
                <label for="AccountNumber" class="control-label"></label>
                <input name="AccountNumber" class="form-control" value="@Model.AccountNumber" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Debt" class="control-label"></label>
                <input name="Debt" class="form-control" value="@Model.Debt" />
                <span asp-validation-for="Debt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MeansAvailable" class="control-label"></label>
                <input name="MeansAvailable" class="form-control" value="@Model.MeansAvailable" />
                <span asp-validation-for="MeansAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PaymentDate" class="control-label"></label>
                <input name="PaymentDate" class="form-control" value="@Model.PaymentDate" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CurrencyCode" class="control-label"></label>
                <input name="CurrencyCode" class="form-control" value="@Model.CurrencyCode" />
                <span asp-validation-for="CurrencyCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CreationDate" class="control-label"></label>
                <input name="CreationDate" class="form-control" value="@Model.CreditAccountId" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ClosingDate" class="control-label"></label>
                <input name="ClosingDate" class="form-control" value="@Model.ClosingDate" />
                <span asp-validation-for="ClosingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "List", "CreditAccount")
</div>

